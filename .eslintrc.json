{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"error",
			"unix"
		],
		"quotes": [
			"error",
			"backtick",
			{
				"avoidEscape": true,
				"allowTemplateLiterals": true
			}
		],
		"semi": [
			"error",
			"always"
		],
		"brace-style": [
			"error",
			"stroustrup"
		],
		"multiline-ternary": [
			"error",
			"always-multiline"
		],
		"default-case": [
			"error"
		],
		"no-trailing-spaces": [
			"error"
		],
		"block-scoped-var": [
			"error"
		]
	}
}
